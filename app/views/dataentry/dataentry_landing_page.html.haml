/ Page Content
.container.shadow-none.p-3.mb-5.bg-light.rounded{:style => "margin-top: 25px"}
  %div.pageheight
    .row
      %br/
      %br/
      %br/
      .col-md-12
        - if flash[:notice]
          %br/
          %br/
          %br/
          .alert.alert-success{:role => "alert"}
            =flash[:notice]
        .row
          .col-md-2
            #sidebar-wrapper
              %ul.nav.flex-column{:style => "margin-top: 50px"}
                %li.nav-item
                  %a.nav-link{:href => "/dataentry/dataentry_landing_page"} My Projects
                %li.nav-item
                  %a.nav-link{:href => "/profile"} Profile
                %li.nav-item
                  %a.nav-link{:href => "/dataentry/update"} Update Request
          .col-md-10
            .shadow-none.p-3.mb-5.bg-light.rounded{:style => "margin-top: 25px"}
              %h4.my-4
                Data Entry Landing Page
              %br
              %h5 Projects
              %table#projects
                %thead
                  %tr
                    %th Form ID
                    %th Form Name
                    %th Project Name
                    %th Update
                %tbody
                  - @formsdata.each do |formsdata|
                    %tr
                      -#%td= link_to "#{formsdata.project_name}", project_path(project)
                      %td= link_to "#{formsdata['fid']}", form_path(formsdata['fid'])
                      %td= link_to "#{formsdata['form_name']}"
                      %td= formsdata['project_name']
                      %td= link_to "Add Data", "/dataentry/adddata/#{formsdata['fid']}"
    / /.row
/ /.container
