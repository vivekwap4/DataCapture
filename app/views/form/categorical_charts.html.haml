/ Page Content
.container.shadow-none.p-3.mb-5.bg-light.rounded{:style => "margin-top: 25px"}
  %div.pageheight
    .row
      %br/
      %br/
      %br/
      .col-md-12
        - if flash[:notice]
          %br/
          %br/
          %br/
          .alert.alert-success{:role => "alert"}
            =flash[:notice]
        .row
          .col-md-2
            #sidebar-wrapper
              %ul.nav.flex-column{:style => "margin-top: 50px"}
                %li.nav-item
                  %a.nav-link{:href => "/researcher/researcher_landing_page"} My Projects
                %li.nav-item
                  %a.nav-link{:href => "/profile"} Profile
                %li.nav-item
                  %a.nav-link{:href => "/researcher/grantaccess"} Grant Access
                %li.nav-item
                  %a.nav-link{:href => "/researcher/approvedata"} Approve Data
                %li.nav-item
                  %a.nav-link{:href => "/researcher/archive"} Archive
          .col-md-10
            %br/
            %h4.my-4
              Categorical Charts
            %br/
            - @categorical_var.each do |var|
              = "#{var}"
            - @categorical_var_hash_array.each do |hash|
              = pie_chart hash, download: true
              %br/
              = column_chart hash, download: true
            %br/
            %h4.my-4
              Numerical Variable Charts
            %br/
            - @numerical_var.each do |var|
              = "#{var}"
            - @numerical_var_hash_array.each do |hash|
              = scatter_chart hash, download: true
            %br/
            -# Displays "no charts available message" when no categorical or numerical variables are in the form
            - if @categorical_var.length == 0 && @numerical_var.length == 0
              No Charts Available

  / /.row
/ /.container
